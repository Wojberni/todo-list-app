<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addTodoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_todo_text"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addTodoTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTodoText" />

    <TextView
        android:id="@+id/addTodoDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/description"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputTitle"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputTitle" />

    <TextView
        android:id="@+id/addTodoCreationDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creation_date"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/addTodoText" />

    <TextView
        android:id="@+id/addTodoCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/category"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputDescription" />

    <TextView
        android:id="@+id/addTodoDeadlineDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/deadline_date"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/addTodoCreationDate" />

    <TextView
        android:id="@+id/addTodoAttachmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attachment"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/addTodoDeadlineDate" />

    <EditText
        android:id="@+id/addTodoInputTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTodoTitleText" />

    <EditText
        android:id="@+id/addTodoInputDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTodoDescriptionText" />

    <EditText
        android:id="@+id/addTodoInputCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTodoCategoryText" />

    <CheckBox
        android:id="@+id/addTodoCheckBoxDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/addTodoInputButton"
        app:layout_constraintEnd_toStartOf="@+id/addTodoInputButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addTodoInputButton" />

    <CheckBox
        android:id="@+id/addTodoCheckBoxNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/addTodoInputButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toEndOf="@+id/addTodoInputButton"
        app:layout_constraintTop_toTopOf="@+id/addTodoInputButton" />

    <Button
        android:id="@+id/addTodoInputCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        app:layout_constraintEnd_toStartOf="@+id/addTodoCreationDateText"
        app:layout_constraintStart_toEndOf="@+id/addTodoInputTitle"
        app:layout_constraintTop_toBottomOf="@+id/addTodoCreationDateText" />

    <Button
        android:id="@+id/addTodoInputCreationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addTodoCreationDateText"
        app:layout_constraintTop_toBottomOf="@+id/addTodoCreationDateText" />

    <Button
        android:id="@+id/addTodoInputDeadlineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        app:layout_constraintEnd_toStartOf="@+id/addTodoDeadlineDateText"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/addTodoDeadlineDateText" />

    <Button
        android:id="@+id/addTodoInputDeadlineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addTodoDeadlineDateText"
        app:layout_constraintTop_toBottomOf="@+id/addTodoDeadlineDateText" />

    <Button
        android:id="@+id/addTodoInputAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_attachment"
        app:layout_constraintEnd_toEndOf="@+id/addTodoAttachmentText"
        app:layout_constraintStart_toStartOf="@+id/addTodoAttachmentText"
        app:layout_constraintTop_toBottomOf="@+id/addTodoAttachmentText" />

    <Button
        android:id="@+id/addTodoInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/add_todo_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/addTodoDeadlineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/addTodoInputDeadlineDate"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputDeadlineDate"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputDeadlineDate" />

    <TextView
        android:id="@+id/addTodoDeadlineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/addTodoInputDeadlineTime"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputDeadlineTime"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputDeadlineTime" />

    <TextView
        android:id="@+id/addTodoFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/file"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addTodoInputAttachment"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputAttachment"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputAttachment" />

    <TextView
        android:id="@+id/addTodoCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/addTodoInputCreationDate"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputCreationDate"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputCreationDate" />

    <TextView
        android:id="@+id/addTodoCreationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/addTodoInputCreationTime"
        app:layout_constraintStart_toStartOf="@+id/addTodoInputCreationTime"
        app:layout_constraintTop_toBottomOf="@+id/addTodoInputCreationTime" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="365dp" />

</androidx.constraintlayout.widget.ConstraintLayout>